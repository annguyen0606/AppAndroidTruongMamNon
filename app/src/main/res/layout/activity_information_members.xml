<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:padding="10dp"
    android:background="@drawable/background_login"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activity.InformationMembersActivity">
    <ImageView
        android:id="@+id/backMainActivityAtInforActivity"
        android:layout_alignParentLeft="true"
        android:layout_width="30dp"
        android:layout_alignParentTop="true"
        android:src="@drawable/ic_back_black_24dp"
        android:layout_height="30dp"></ImageView>
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/containerImagePeople"
        android:layout_width="match_parent"
        android:layout_marginTop="10dp"
        android:layout_centerHorizontal="true"
        android:layout_height="wrap_content">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/circleViewStudentFragmentInformation"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:src="@drawable/ic_person_black_24dp"
            app:civ_border_color="#000"
            app:civ_border_width="2dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"></de.hdodenhof.circleimageview.CircleImageView>

        <FrameLayout
            android:id="@+id/frameLayout"
            android:layout_width="50dp"
            android:layout_height="50dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/circleViewStudentFragmentInformation"
            app:layout_constraintTop_toTopOf="@+id/circleViewStudentFragmentInformation">

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/circleViewParentFragmentInformation"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_gravity="center"
                android:src="@drawable/ic_person_black_24dp"
                app:civ_border_color="#000"
                app:civ_border_width="2dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toStartOf="@+id/circleViewStudentFragmentInformation"
                app:layout_constraintTop_toTopOf="@+id/circleViewStudentFragmentInformation"></de.hdodenhof.circleimageview.CircleImageView>

        </FrameLayout>

        <FrameLayout
            android:id="@+id/frameLayout2"
            android:layout_width="50dp"
            android:layout_height="50dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/circleViewStudentFragmentInformation">

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/circleViewParent2FragmentInformation"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@drawable/ic_person_black_24dp"
                app:civ_border_color="#000"
                app:civ_border_width="2dp"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/circleViewStudentFragmentInformation"></de.hdodenhof.circleimageview.CircleImageView>

        </FrameLayout>

        <FrameLayout
            android:id="@+id/frameLayout3"
            android:layout_width="50dp"
            android:layout_height="50dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toEndOf="@+id/circleViewStudentFragmentInformation"
            app:layout_constraintTop_toTopOf="parent">

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/circleViewParent3FragmentInformation"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@drawable/ic_person_black_24dp"
                app:civ_border_color="#000"
                app:civ_border_width="2dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toEndOf="@+id/circleViewStudentFragmentInformation"
                app:layout_constraintTop_toTopOf="parent"></de.hdodenhof.circleimageview.CircleImageView>
        </FrameLayout>

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/circleViewCheckParentFragmentInformation"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_check"
            app:layout_constraintBottom_toBottomOf="@+id/frameLayout"
            app:layout_constraintEnd_toEndOf="@+id/frameLayout"></de.hdodenhof.circleimageview.CircleImageView>

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/circleViewCheck2ParentFragmentInformation"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_check"
            app:layout_constraintBottom_toBottomOf="@+id/frameLayout2"
            app:layout_constraintEnd_toEndOf="@+id/frameLayout2"></de.hdodenhof.circleimageview.CircleImageView>

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/circleViewCheck3ParentFragmentInformation"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_check"
            app:layout_constraintBottom_toBottomOf="@+id/frameLayout3"
            app:layout_constraintEnd_toEndOf="@+id/frameLayout3"></de.hdodenhof.circleimageview.CircleImageView>

    </androidx.constraintlayout.widget.ConstraintLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/containerImagePeople"
        android:orientation="vertical"
        android:layout_alignParentBottom="true"
        android:padding="5dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="horizontal">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:orientation="vertical">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:orientation="horizontal">

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/ic_person_black_24dp"></ImageView>

                        <TextView
                            android:layout_marginLeft="5dp"
                            android:textSize="18sp"
                            android:textStyle="bold"
                            android:id="@+id/txtTenNguoiThanMembersActivity"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Tên người thân"
                            android:textColor="#000"></TextView>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:orientation="horizontal">

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/ic_place_black_24dp"></ImageView>

                        <TextView
                            android:layout_marginLeft="5dp"
                            android:textSize="18sp"
                            android:textStyle="bold"
                            android:id="@+id/txtDiaChiNguoiThanMembersActivity"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Địa chỉ"
                            android:textColor="#000"></TextView>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:orientation="horizontal">

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:src="@drawable/ic_local_phone"></ImageView>

                        <TextView
                            android:layout_marginLeft="5dp"
                            android:textSize="18sp"
                            android:textStyle="bold"
                            android:id="@+id/txtDienThoaiNguoiThanMembersActivity"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Số điện thoại"
                            android:textColor="#000"></TextView>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:orientation="horizontal">

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:src="@drawable/ic_people_outline"></ImageView>

                        <TextView
                            android:layout_marginLeft="5dp"
                            android:textSize="18sp"
                            android:textStyle="bold"
                            android:id="@+id/txtQuanHeHocSinhMembersActivity"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Mối quan hệ"
                            android:textColor="#000"></TextView>
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/ic_card"></ImageView>

                    <TextView
                        android:layout_marginLeft="5dp"
                        android:textSize="18sp"
                        android:id="@+id/txtMaHocSinhMembersActivity"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Mã Học Sinh"
                        android:textStyle="bold"
                        android:textColor="#000"></TextView>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:src="@drawable/ic_person_black_24dp"></ImageView>

                    <TextView
                        android:layout_marginLeft="5dp"
                        android:textSize="18sp"
                        android:id="@+id/txtTenHocSinhMembersActivity"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Tên học sinh"
                        android:textStyle="bold"
                        android:textColor="#000"></TextView>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:layout_weight="1"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:src="@drawable/ic_date_range"></ImageView>

                    <TextView
                        android:layout_marginLeft="5dp"
                        android:textSize="18sp"
                        android:id="@+id/txtNgaySinhHocSinhMembersActivity"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Ngày Sinh"
                        android:textStyle="bold"
                        android:textColor="#000"></TextView>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:src="@drawable/ic_sex"></ImageView>

                    <TextView
                        android:layout_marginLeft="5dp"
                        android:textSize="18sp"
                        android:id="@+id/txtGioiTinhHocSinhMembersActivity"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Giới tính"
                        android:textStyle="bold"
                        android:textColor="#000"></TextView>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:src="@drawable/ic_school_black_24dp"></ImageView>

                    <TextView
                        android:layout_marginLeft="5dp"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:id="@+id/txtLopHocSinhMembersActivity"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Lớp"
                        android:textColor="#000"></TextView>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:src="@drawable/ic_place_black_24dp"></ImageView>

                    <TextView
                        android:layout_marginLeft="5dp"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:id="@+id/txtDiaChiHocSinhMembersActivity"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Địa chỉ"
                        android:textColor="#000"></TextView>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/txtThoiGianDonConMuonMembersActivity"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:textStyle="bold"
                android:text="Trạng thái đón con"
                android:textColor="#000"
                android:textSize="30sp"></TextView>

            <Button
                android:id="@+id/btnConfirmImformationActivity"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="10dp"
                android:background="@drawable/background_button"
                android:text="Xác nhận"
                android:textAllCaps="false"
                android:textColor="#000"></Button>
        </LinearLayout>
    </LinearLayout>
</RelativeLayout>
<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:padding="10dp"
    android:background="@drawable/background_login"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/layoutTitleWelcomeStatistic"
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/backMainActivityAtStatisticActivity"
            android:src="@drawable/ic_back_black_24dp"
            android:layout_width="30dp"
            android:layout_height="30dp"></ImageView>
        <ImageView
            android:src="@drawable/ic_canhcay"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"></ImageView>
        <ImageView
            android:src="@drawable/ic_canhcay2"
            android:layout_width="match_parent"
            android:layout_weight="1"
            android:layout_height="wrap_content"></ImageView>
    </LinearLayout>
    <FrameLayout
        android:layout_below="@+id/layoutTitleWelcomeStatistic"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <ImageView
            android:layout_gravity="center"
            android:src="@drawable/ic_conek"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"></ImageView>
        <androidx.swiperefreshlayout.widget.SwipeRefreshLayout
            android:id="@+id/pullToGetDataTotalLateTime"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <LinearLayout
                    android:orientation="horizontal"
                    android:gravity="center"
                    android:layout_gravity="center"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <TextView
                        android:text="Lớp:"
                        android:textColor="#000"
                        android:textStyle="bold"
                        android:textSize="18sp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">
                    </TextView>
                    <Spinner
                        android:id="@+id/spinnerClassTotalLateMinute"
                        android:layout_width="wrap_content"
                        android:gravity="center"
                        android:textColor="#000"
                        android:textAlignment="center"
                        android:layout_height="wrap_content"></Spinner>
                    <TextView
                        android:text="Tháng:"
                        android:textSize="18sp"
                        android:textColor="#000"
                        android:textStyle="bold"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">
                    </TextView>
                    <Spinner
                        android:id="@+id/spinnerMonthTotalLateMinute"
                        android:layout_width="wrap_content"
                        android:gravity="center"
                        android:textColor="#000"
                        android:textAlignment="center"
                        android:layout_height="wrap_content"></Spinner>
                    <ImageView
                        android:id="@+id/imageExportFragmentTotalLateTime"
                        android:src="@drawable/ic_email_black_24dp"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"></ImageView>
                </LinearLayout>
                <ListView
                    android:id="@+id/lvListTotalLateMinute"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"></ListView>
            </LinearLayout>
        </androidx.swiperefreshlayout.widget.SwipeRefreshLayout>
    </FrameLayout>
</RelativeLayout>
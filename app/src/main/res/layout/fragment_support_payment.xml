<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:padding="30dp"
    android:layout_height="match_parent">
    <ImageView
        android:layout_gravity="center"
        android:src="@drawable/ic_conek"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"></ImageView>
    <androidx.swiperefreshlayout.widget.SwipeRefreshLayout
        android:id="@+id/pullToGetDataSupportPayment"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:orientation="vertical"
                android:padding="10dp">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <ImageView
                        android:src="@drawable/ic_card"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"></ImageView>

                    <EditText
                        android:id="@+id/edtUidParentSupportPayment"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:focusable="false"
                        android:gravity="center"
                        android:hint="123456"
                        android:textStyle="italic"></EditText>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <ImageView
                        android:src="@drawable/ic_account"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"></ImageView>

                    <EditText
                        android:id="@+id/edtNameParentSupportPayment"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:focusable="false"
                        android:gravity="center"
                        android:hint="Nguyễn Văn A"
                        android:textStyle="italic"></EditText>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <ImageView
                        android:src="@drawable/ic_account"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"></ImageView>

                    <EditText
                        android:id="@+id/edtNameStudentSupportPayment"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:focusable="false"
                        android:gravity="center"
                        android:hint="Nguyễn Văn B"
                        android:textStyle="italic"></EditText>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <ImageView
                        android:src="@drawable/ic_card"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"></ImageView>

                    <EditText
                        android:id="@+id/edtCodeStudentSupportPayment"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:focusable="false"
                        android:gravity="center"
                        android:hint="Mã học sinh"
                        android:inputType="numberSigned"
                        android:textStyle="italic"></EditText>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <ImageView
                        android:src="@drawable/ic_school_black_24dp"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"></ImageView>

                    <TextView
                        android:id="@+id/tvClassStudentSupportPaymentFragment"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:textAlignment="center"></TextView>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <ImageView
                        android:src="@drawable/ic_date_range"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"></ImageView>

                    <LinearLayout
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <Spinner
                            android:id="@+id/spinnerMonthPaymentSupportPaymentFragment"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:gravity="center"></Spinner>
                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <ImageView
                        android:src="@drawable/ic_attach_money"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"></ImageView>

                    <EditText
                        android:id="@+id/edtTotalMoneySupportPayment"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:hint="660000"
                        android:focusable="false"
                        android:inputType="numberSigned"
                        android:singleLine="true"
                        android:textStyle="italic"></EditText>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <ImageView
                        android:src="@drawable/ic_account"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"></ImageView>

                    <EditText
                        android:id="@+id/edtNameTeacherSupportPayment"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:focusable="false"
                        android:gravity="center"
                        android:hint="Nguyễn Văn C"
                        android:textStyle="italic"></EditText>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <ImageView
                        android:src="@drawable/ic_card"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"></ImageView>

                    <EditText
                        android:id="@+id/edtCodeTeacherSupportPayment"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:focusable="false"
                        android:gravity="center"
                        android:hint="Mã số người thu tiền"
                        android:textStyle="italic"></EditText>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <ImageView
                        android:src="@drawable/ic_info_black_24dp"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"></ImageView>

                    <EditText
                        android:id="@+id/edtReasonSupportPaymentFragment"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:focusable="false"
                        android:hint="Lý do nộp tiền"
                        android:singleLine="true"
                        android:textStyle="italic"></EditText>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <Button
                            android:id="@+id/btnConfirmSupportFragment"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginLeft="20dp"
                            android:background="@drawable/background_button"
                            android:text="Xác nhận"
                            android:textColor="#F8FFFFFF"
                            android:textStyle="bold"></Button>
                    </LinearLayout>

                </LinearLayout>
            </LinearLayout>
        </ScrollView>
    </androidx.swiperefreshlayout.widget.SwipeRefreshLayout>
</FrameLayout>
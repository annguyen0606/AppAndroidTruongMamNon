<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:padding="10dp"
    android:background="@drawable/background_login"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/backMainActivityAtSupportPaymentActivity"
            android:src="@drawable/ic_back_black_24dp"
            android:layout_width="24dp"
            android:layout_height="24dp"></ImageView>
        <!--ImageView
            android:src="@drawable/ic_canhcay"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"></ImageView>
        <ImageView
            android:src="@drawable/ic_canhcay2"
            android:layout_width="match_parent"
            android:layout_weight="1"
            android:layout_height="wrap_content"></ImageView-->
    </LinearLayout>
    <FrameLayout
        android:padding="20dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <ImageView
            android:layout_gravity="center"
            android:src="@drawable/ic_conek"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"></ImageView>
        <androidx.swiperefreshlayout.widget.SwipeRefreshLayout
            android:id="@+id/pullToGetDataSupportPayment"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <ListView
                android:id="@+id/lvDanhSachHocSinhThuTien"
                android:layout_width="match_parent"
                android:layout_height="match_parent"></ListView>
        </androidx.swiperefreshlayout.widget.SwipeRefreshLayout>
    </FrameLayout>
</RelativeLayout>
<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@drawable/background_login"
    android:layout_height="match_parent">
    <LinearLayout
        android:id="@+id/layoutBackAtAddAccount"
        android:layout_width="match_parent"
        android:padding="5dp"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/backMainActivityAtAddAccountActivity"
            android:src="@drawable/ic_back_black_24dp"
            android:layout_width="30dp"
            android:layout_height="30dp"></ImageView>
        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:layout_height="wrap_content">
            <ImageView
                android:src="@drawable/ic_canhcay"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"></ImageView>
            <ImageView
                android:src="@drawable/ic_canhcay2"
                android:layout_width="match_parent"
                android:layout_weight="1"
                android:layout_height="wrap_content"></ImageView>
        </LinearLayout>
    </LinearLayout>

    <View
        android:layout_above="@+id/tabLayoutAddAcount"
        android:background="#7E000000"
        android:layout_width="match_parent"
        android:layout_height="2dp"></View>
    <com.google.android.material.tabs.TabLayout
        android:id="@+id/tabLayoutAddAcount"
        android:layout_width="match_parent"
        app:tabMode="fixed"
        app:tabTextColor="#CFD8DC"
        app:tabSelectedTextColor="#000"
        android:layout_alignParentBottom="true"
        android:layout_height="wrap_content">
    </com.google.android.material.tabs.TabLayout>
    <androidx.viewpager.widget.ViewPager
        android:layout_below="@+id/layoutBackAtAddAccount"
        android:layout_above="@+id/tabLayoutAddAcount"
        android:id="@+id/viewPagerAddAcountLayout"
        android:layout_width="match_parent"
        android:layout_weight="0"
        android:layout_height="wrap_content"></androidx.viewpager.widget.ViewPager>
</RelativeLayout>